<%= form_with(model: @tweet, local: true ,url: choose_new_or_edit ) do |form| %>
<% if @tweet.errors.any? %>
  <div id="error_explanation">
    <h2><%= @tweet.errors.count %> error has occurred</h2>
    <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="form_contant">
  <%= form.label :content, class:'label_change' %>
  <%= form.text_field :content, class:'form_text' %>
</div>
<%= form.submit %>
<% end %>
<%= link_to "Back to index", tweets_path %>
